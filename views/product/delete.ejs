<% include ../partials/header %>
     <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <h2>Product</h2>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>productId</th>
                <th>name</th>
                <th>deadline</th>
                <th>completed</th>
                <th>prodcut Manager</th>
              </tr>
            </thead>
            <tbody>
              <% if (prods) { %>  
                <% prods.forEach((prod) => { %>            
                  <tr>
                    <td><%= prod.productId %></td>
                    <td><%= prod.name %></td>
                    <td><%= moment(prod.deadline).format('YYYY-MM-DD') %></td>
                    <td><%= prod.complete %></td>
                    <td><%= prod.firstName %></td>
                    <td><form action = "/products/<%= prod.productId%>?_method=DELETE" method="POST">
                      <button class="btn btn-outline-danger">Delete</button>
                    </form></td>                    
                  </tr>
                <% }) %>  
              <% } %>                           
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>
