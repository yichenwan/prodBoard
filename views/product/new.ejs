<% include ../partials/header %>
     <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Add Product</h1>

        </div>
			<form class="new-form" action="/products" method="POST">
				<div class="form-group">
				    <label for="name">name</label>	
					<input class="form-control" id="name" type='text' name="name">		
				</div>
				<div class="form-group">
				    <label for="description">description</label>	
					<textarea class="form-control" id = "description" name="description" rows="5" cols="33"></textarea>		
				</div>
				<div class="form-group">
				    <label for="deadline">deadline</label>	
					<input class="form-control" id = "deadline" type='text' name="deadline" placeholder="yyyy-mm-dd">
				</div>
				<div class="form-group">
				    <label for="completed">completed</label>	
					<div class="form-check">			    
					    <input class="form-check-input" type="radio" name="complete" value="1">	 
						<label class="form-check-label" for="yes">yes</label>    
					</div>
					<div class="form-check">			
					    <input class="form-check-input" type="radio" name="complete" value="0">	
				    	<label class="form-check-label" for="no">no</label>
					</div>	    	  	
				</div>	
				<div class="form-group">
					<label>Select a product Manager:</label>		
					<div class="form-check">
						<% prodMgrs.forEach((prodMgr) => { %>
							<div>
							  <input class="form-check-input" type="radio" id="mgr<%= prodMgr.mgrId%>" name="mgrId" value="<%= prodMgr.mgrId%>">
							  <label class="form-check-label" for="mgr<%= prodMgr.mgrId%>"><%= prodMgr.firstName%> <%= prodMgr.lastName%></label>
							</div>		
						<% }) %>		
					</div>
				</div>
				<button class="ml-1 btn btn-outline-primary btn-sm">NEXT</button>
			</form>
      </main>
    </div>
  </div>
<% include ../partials/footer %>